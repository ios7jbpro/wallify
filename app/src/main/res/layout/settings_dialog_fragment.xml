<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:background="@drawable/roundedbg">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="vertical"
			android:background="@drawable/roundedbg">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					android:background="@drawable/roundedbginfocard"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:paddingLeft="6dp"
					android:paddingTop="6dp"
					android:paddingRight="0dp"
					android:paddingBottom="6dp">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imageView6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="4dp"
						android:layout_weight="0"
						android:src="@mipmap/ic_launcher" />

					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:padding="8dp"
						android:text="Wallify"
						android:textColor="@color/textprimary"
						android:textSize="30sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					android:background="@drawable/roundedbginfocardcompleter"
					android:orientation="horizontal"
					android:paddingLeft="0dp"
					android:paddingTop="6dp"
					android:paddingRight="3dp"
					android:paddingBottom="6dp">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imageView7"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginRight="4dp"
						android:layout_weight="0"
						android:adjustViewBounds="false"
						android:cropToPadding="false"
						android:scaleType="centerCrop"
						android:src="@mipmap/ic_launcher"
						android:visibility="invisible" />

					<TextView
						android:id="@+id/textview"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="0"
						android:paddingLeft="0dp"
						android:paddingTop="8dp"
						android:paddingRight="0dp"
						android:paddingBottom="8dp"
						android:text=" "
						android:textColor="@color/textprimary"
						android:textSize="30sp"
						android:textStyle="bold" />
				</LinearLayout>

			</LinearLayout>

			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Settings"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="@color/textprimary" />

			<LinearLayout
				android:id="@+id/linearColorPreviews"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<Switch
					android:id="@+id/switchColorPreviews"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="8dp"
					android:text="Extract wallpaper colors\n(debugger suggested)"
					android:textColor="@color/textprimary"
					android:textSize="12sp" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/linearDisableAnims"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<Switch
					android:id="@+id/switchDisableAnims"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="8dp"
					android:text="Disable app animatons\n(suggested for lowend devices)"
					android:textColor="@color/textprimary"
					android:textSize="12sp" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/linearDisableBlur"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<Switch
					android:id="@+id/switchDisableBlur"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="8dp"
					android:text="Disable blur\n(Currently broken, blurs anyway)"
					android:textColor="@color/textprimary"
					android:textSize="12sp" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Wallpaper load timeout"
					android:textColor="@color/textprimary"
					android:textSize="12sp" />

				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right|center_vertical"
					android:orientation="horizontal">

					<EditText
						android:id="@+id/edittext1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@color/backgroundviolent"
						android:hint="Timeout"
						android:padding="8dp"
						android:textColor="@color/textprimary"
						android:textColorHint="#607D8B"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="ms"
						android:textColor="@color/textprimary"
						android:textSize="11sp" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:background="@drawable/roundedbgviolent">

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/circleimageview1"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/devpfp1"
					app:civ_border_color="@color/colorAccent"
					app:civ_border_overlay="true"
					app:civ_border_width="3dp"
					app:civ_circle_background_color="#FFFFFF" />

				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="PlaceholderDevListLayout"
					android:textColor="@color/textprimary"
					android:textSize="14sp" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear30"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="4dp"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<TextView
					android:id="@+id/textview40"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="!! Project might be abandoned !!\n Click for more info"
					android:textColor="#FFC107"
					android:textSize="14sp" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linearReinitSetup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="4dp"
				android:background="@drawable/roundedbgviolent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="8dp">

				<TextView
					android:id="@+id/textviewReinitSetup"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Reinitiate setup screen"
					android:textColor="@color/textprimary"
					android:textSize="14sp" />
			</LinearLayout>

			<ListView
				android:id="@+id/listView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:divider="@android:color/transparent"
				android:dividerHeight="0dp" />

			<TextView
				android:id="@+id/textview3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="DESPITE ALL MY RAGE\n\nall image sources are mentioned in names"
				android:textSize="12sp"
				android:textColor="@color/textprimary" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>
